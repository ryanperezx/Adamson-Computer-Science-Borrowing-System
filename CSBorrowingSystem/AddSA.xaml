<UserControl x:Class="CSBorrowingSystem.AddSA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSBorrowingSystem"
             mc:Ignorable="d" d:DesignWidth="370" Background="White" Height="455">
    <Grid Background="#FFF9F9F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="38*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="USERNAME" FontFamily="Raleway SemiBold" Foreground="#FF383838" Grid.Column="1" Grid.Row="3" FontSize="14" Grid.ColumnSpan="3" />
        <TextBox  Name="SAUname" BorderThickness="0,0,0,1" BorderBrush="#898D8D8D" FontFamily="Raleway SemiBold" FontSize="14" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" />
        <TextBlock Text="PASSWORD" FontFamily="Raleway SemiBold" Foreground="#FF383838" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="6" FontSize="14" />
        <TextBox Name="SAPass" BorderThickness="0,0,0,1" BorderBrush="#898D8D8D" FontFamily="Raleway SemiBold" FontSize="14" Grid.Column="1" Grid.RowSpan="2" Grid.Row="6" Grid.ColumnSpan="3" />
        <Image Source="images/icon.png" RenderTransformOrigin="6.133,8.2" Grid.Column="3" Grid.Row="3" Margin="30,14,0,6" Grid.RowSpan="2" />
        <Image Source="images/lock.png" RenderTransformOrigin="6.133,8.2" Margin="30,7,0,7" Grid.Column="3" Grid.RowSpan="2" Grid.Row="6" />
        <Button x:Name="Create" Content="Create"  FontFamily="Raleway SemiBold" Grid.Column="1" Grid.Row="9" Height="Auto" Grid.ColumnSpan="3" Background="#FF3AB78A" BorderBrush="{x:Null}"  />

        <Image Source="images/add.png" Stretch="Fill" Grid.Column="2" Grid.Row="1" />

    </Grid>
</UserControl>
